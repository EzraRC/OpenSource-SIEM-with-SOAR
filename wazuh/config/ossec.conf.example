<!-- Place in your Wazuh manager at /var/ossec/etc/ossec.conf (AIO appliance) -->
<!-- Only the relevant fragments are shown; merge carefully with your existing file. -->
<ossec_config>
  <!-- pfSense syslog receiver (UDP/514 on manager or via rsyslog->Wazuh) -->
  <remote>
    <connection>syslog</connection>
    <port>514</port>
    <protocol>udp</protocol>
  </remote>

  <!-- Custom integration to post high-confidence alerts to Shuffle -->
  <integration>
    <name>custom-shuffle</name>
    <hook_url>http://localhost:3001/api/v1/hooks/YOUR_SHUFFLE_WEBHOOK_ID</hook_url>
    <level>10</level>
    <rule_id>5716, 5702, 31508</rule_id> <!-- example rule ids; change to your set -->
    <alert_format>json</alert_format>
  </integration>
</ossec_config>
